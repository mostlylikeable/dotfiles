root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# don't add newlines to symlinks
[bin/*]
insert_final_newline = false

# gitconfig should use tabs to match `git config` behavior
[.gitconfig]
indent_style = tab
indent_size = 4
